/* 主要标题 */
QLabel#titleLabel {
    font-size: 36px;
    font-weight: bold;
    color: white;
    padding: 15px;
    border-bottom: 2px solid #444;
    margin-bottom: 15px;
}

/* 分区标题 */
QLabel.sectionTitleLabel {
