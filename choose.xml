    margin-bottom: 5px;
}

/* 角色按钮容器 */
#characterButtonsContainer QPushButton {
    background-color: transparent;
    border: 2px solid #555;
    border-radius: 10px;
}
#characterButtonsContainer QPushButton:hover {
    border-color: #888;
}
#characterButtonsContainer QPushButton:checked {
	background-color: rgba(255, 215, 0, 0.2); /* 选中时有淡金色背景 */
	border: 2px solid #FFD700;
}

/* 地图选择按钮 */
#mapSelectionContainer QPushButton {
    color: white;
    background-color: #333;
    border: 2px solid #555;
    border-radius: 8px;
    padding: 12px;
    font-size: 16px;
	font-weight: bold;
    min-height: 40px;
}
#mapSelectionContainer QPushButton:hover {
    background-color: #444;
    border-color: #777;
}
#mapSelectionContainer QPushButton:checked {
	background-color: #5a5a5a;
	border: 2px solid #FFD700;
}

/* 地图预览和描述 */
#mapPreviewLabel {
    background-color: #111;
    border: 1px solid #444;
    border-radius: 10px;
}
#mapDescriptionLabel {
    color: #ccc;
    font-size: 16px;
    padding: 15px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    min-height: 60px;
}

/* 底部确认按钮 */
#confirmationButtonsContainer QPushButton {
    font-size: 18px;
    padding: 12px;
    min-width: 180px;
    border-radius: 8px;
    background-color: #555;
    color: white;
}
#confirmationButtonsContainer QPushButton:hover {
    background-color: #666;
}
#confirmButton {
    background-color: #007ACC; /* 确认按钮用蓝色 */
}
#confirmButton:hover {
    background-color: #008ae6;
}</string>
